{
  "name": "masterselects-native-helper",
  "version": "1.0.0",
  "description": "Native helper for MasterSelects - YouTube downloads and more",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "start:headless": "node server.js",
    "dev": "electron .",
    "build": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg"
  },
  "build": {
    "appId": "com.masterselects.helper",
    "productName": "MasterSelects Helper",
    "mac": {
      "category": "public.app-category.video",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "files": [
      "app.js",
      "server.js",
      "assets/**/*"
    ]
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
